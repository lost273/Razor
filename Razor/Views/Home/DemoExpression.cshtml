@model Razor.Models.Product

@{
    ViewBag.Title = "DemoExpression";
}

<table>
    <thead>
        <tr>
            <td>Property</td>
            <td>Value</td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Name</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>Price</td>
            <td>@Model.Price</td>
        </tr>
        <tr>
            <td>Stock Level</td>
            <td>@switch ((int)ViewBag.ProductCount) {
                case 0:
                    @: Out of Stock
                    break;
                case 1:
                   <b>Low Stock (@ViewBag.ProductCount)</b>
                   break;
                default:
                    @ViewBag.ProductCount
                    break;
            }
            </td>
        </tr>
    </tbody>
</table>